<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#54C5F1">




    <EditText
        android:id="@+id/newEmail"
        style="@android:style/Widget.AutoCompleteTextView"
        android:layout_width="350dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_text_input"
        android:drawableBottom="@color/colorPrimary"
        android:ems="10"
        android:hint="Email"
        android:paddingLeft="16dp"
        android:textColor="#615151"
        android:textColorHighlight="#82B1FF"
        android:textCursorDrawable="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/newMdp"
        style="@android:style/Widget.AutoCompleteTextView"
        android:layout_width="350dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_text_input"
        android:drawableBottom="@color/colorPrimary"
        android:ems="10"
        android:hint="Mot de passe"
        android:paddingLeft="16dp"
        android:textColor="#615151"
        android:textColorHighlight="#82B1FF"
        android:textCursorDrawable="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newEmail" />

    <EditText
        android:id="@+id/newConfirmedMdp"
        style="@android:style/Widget.AutoCompleteTextView"
        android:layout_width="350dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_text_input"
        android:drawableBottom="@color/colorPrimary"
        android:ems="10"
        android:hint="Confirmer le mot de passe"
        android:paddingLeft="16dp"
        android:textColor="#615151"
        android:textColorHighlight="#82B1FF"
        android:textCursorDrawable="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newMdp" />

    <EditText
        android:id="@+id/newSurName"
        style="@android:style/Widget.AutoCompleteTextView"
        android:layout_width="350dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_text_input"
        android:drawableBottom="@color/colorPrimary"
        android:ems="10"
        android:hint="PrÃ©nom"
        android:paddingLeft="16dp"
        android:textColor="#615151"
        android:textColorHighlight="#82B1FF"
        android:textCursorDrawable="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newConfirmedMdp" />

        <EditText
        android:id="@+id/newName"
        style="@android:style/Widget.AutoCompleteTextView"
        android:layout_width="350dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_text_input"
        android:drawableBottom="@color/colorPrimary"
        android:ems="10"
        android:hint="Nom"
        android:paddingLeft="16dp"
        android:textColor="#615151"
        android:textColorHighlight="#82B1FF"
        android:textCursorDrawable="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newSurName" />

    <Button
        android:id="@+id/button_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="createAccount"
        android:text="@string/sign_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newName" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="156dp"
        android:layout_height="36dp"
        android:layout_marginTop="64dp"
        android:text="Inscription"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>